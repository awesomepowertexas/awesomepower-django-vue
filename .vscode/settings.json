{
  "[css][graphql][html][javascript][javascriptreact][json][jsonc][markdown][typescript][typescriptreact][vue][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "editor.codeActionsOnSave": {
    "source.addMissingImports": true,
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "eslint.packageManager": "pnpm",
  "git.autofetch": true,
  "npm.packageManager": "pnpm",
  "python.analysis.extraPaths": ["backend"],
  "python.envFile": "${workspaceFolder}/backend/.env",
  "python.formatting.provider": "black",
  "python.linting.enabled": false,
  "python.sortImports.args": ["--src-path=${workspaceFolder}/backend"],
  "python.terminal.activateEnvironment": false,
  "python.testing.pytestArgs": ["backend", "--no-cov", "-s"],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false
}
